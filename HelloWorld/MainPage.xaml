<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Light 1" Click="RainbowClick" Margin="300,300,0,0" VerticalAlignment="Top"/>
        <Button Content="Light 2" Click="ResetClick" Margin="300,350,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,150,0,0" Text="Hue Toys" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged" FontSize="36"/>
    </Grid>
</Page>
